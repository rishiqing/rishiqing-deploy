{
  "extends": "eslint:recommended",
  "env"     : {
    "es6" : true,
    "node" : node
  },
  "rules": {
    "comma-dangle"                : [1, "never"],
    "func-names"                  : 0,
    "key-spacing"                 : 0,
    "space-before-function-paren" : [2, "always"],
    "no-else-return"              : 0,
    "no-multi-spaces"             : 0,
    "quotes"                      : [2, "single"],
    "jsx-quotes"                  : [2, "prefer-single"],
    "one-var"                     : 0,
    "camelcase"                   : 0,
    "new-cap"                     : 1,
    "object-shorthand"            : 0,
    "no-console"                  : 2,
    "arrow-spacing"               : 2,
    "no-loop-func"                : 0,
    "consistent-return"           : 0
  },
  "ecmaFeatures":{
    "modules" : true,
    "experimentalObjectRestSpread" : true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "globals":{
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NW__" : false,
    "require"      : false,
    "module"       : false,
    "process"      : false,
    "console"      : false,
    "async"        : false
  }
}
